# API server
MRC_SUBMIT_HOST=0.0.0.0
MRC_SUBMIT_PORT=8787
MRC_SUBMIT_ALLOWED_ORIGINS=https://<your-github-username>.github.io
MRC_SUBMIT_API_KEY=
MRC_SUBMIT_STORAGE_DIR=/app/storage

# Admin UI
MRC_ADMIN_KEY=

# Scheduler (KST defaults)
MRC_JOB_TIMEZONE=Asia/Seoul
MRC_JOB_PREPROCESS_AT=01:00
MRC_JOB_PUBLISH_AT=13:00
MRC_JOB_SLEEP_SEC=30
MRC_JOB_RUN_ON_START=0

# Publish output
MRC_PUBLISH_DIR=/app/storage/publish

# Card deck path (mounted file)
MRC_CARDDECK_PATH=/app/CardDeck.md

# Board label mapping (label -> actual code)
MRC_SEED=2025W
MRC_BOARD_LABEL_MAP=0

# LLM (optional)
MRC_LLM_PROVIDER=
MRC_LLM_API_KEY=
