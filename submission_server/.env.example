# Optional: set a shared key so only your crew can submit.
# If unset/blank, submissions are accepted without a key (not recommended if URL is public).
MRC_SUBMIT_API_KEY=

# CORS: GitHub Pages origin (no path).
# Example: https://kimyoungjin06.github.io
MRC_SUBMIT_ALLOWED_ORIGINS=https://kimyoungjin06.github.io

# Server bind
MRC_SUBMIT_HOST=0.0.0.0
MRC_SUBMIT_PORT=8787

# Storage (relative to submission_server/)
MRC_SUBMIT_STORAGE_DIR=./storage

# Upload limits
MRC_SUBMIT_MAX_FILE_MB=15
MRC_SUBMIT_MAX_FILES=5

# Admin UI
MRC_ADMIN_KEY=

# Scheduler (KST defaults)
MRC_JOB_TIMEZONE=Asia/Seoul
MRC_JOB_PREPROCESS_AT=01:00
MRC_JOB_PUBLISH_AT=13:00
MRC_JOB_SLEEP_SEC=30
MRC_JOB_RUN_ON_START=0

# Publish output
MRC_PUBLISH_DIR=./storage/publish

# Card deck path (for boards upload)
MRC_CARDDECK_PATH=../CardDeck.md

# Board label mapping (label -> actual code)
MRC_SEED=2025W
MRC_BOARD_LABEL_MAP=0
